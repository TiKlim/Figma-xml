<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondMainActivity"
    tools:layout_editor_absoluteX="someValue"
    tools:layout_editor_absoluteY="someValue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1522dp"
        android:layout_height="1060dp"
        android:layout_marginStart="-340dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="-1049dp"
        android:layout_marginBottom="-25dp"
        android:background="#253334"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/del"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:alpha="0.898"
        android:backgroundTint="#253334"
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp"
        android:drawableTint="#6DAE81"
        android:foregroundTint="#6DAE81"
        android:radius="1dp"
        android:text="@string/delete"
        android:textColorLink="#6DAE81"
        android:textSize="17sp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#6DAE81" />

    <Button
        android:id="@+id/close"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:alpha="0.898"
        android:backgroundTint="#253334"
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp"
        android:drawableTint="#6DAE81"
        android:foregroundTint="#6DAE81"
        android:radius="1dp"
        android:text="@string/close"
        android:textColorLink="#6DAE81"
        android:textSize="17sp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#6DAE81" />

    <ImageView
        android:layout_width="491dp"
        android:layout_height="261dp"
        android:layout_marginTop="182dp"
        android:src="@drawable/picture1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>